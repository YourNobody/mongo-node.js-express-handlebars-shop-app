<h1>{{title}}</h1>

{{#if courses.length}}
    <div id="card" style="margin-bottom: 15px;">
        <table>
            <thead>
                <tr>
                    <td>Название</td>
                    <td>Количество</td>
                    <td>Действия</td>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{count}}</td>
                        <td>
                            <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <p><strong>Цена: </strong><span class="price">{{fullPrice}}</span></p>
    </div>

    <form action="/orders" method="post">
        <button class="btn btn-primary blue" type="submit">Заказать</button>
    </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}